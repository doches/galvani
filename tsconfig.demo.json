{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": ".",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "types": [
      "node"
    ],
    "declaration": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.d.ts"
  ],
  "compileOnSave": false
}
